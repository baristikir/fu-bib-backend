datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    //  binaryTargets = ["native"]
}

generator giraphql {
    provider = "prisma-giraphql-types"
    // clientOutput = "@prisma/client"
    output   = "./giraphql-types.ts"
}

model User {
    id       String @id @default(uuid())
    email    String @unique
    password String
    name     String
    major    String

    mostUsedLibrary String
    mostUsedTable   String

    reservations Int
    extensions   Int

    strikes Int

    date Float
}

model Library {
    id      String @id @default(uuid())
    name    String @unique
    adress  String
    email   String
    website String

    Table Table[]
}

model Table {
    id         String  @id @default(uuid())
    identifier String  @unique
    library    Library @relation(fields: [libraryId], references: [id])
    libraryId  String

    booked Boolean
    time   Float
}
